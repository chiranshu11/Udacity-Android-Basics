<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chiranshu.project7.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/library"
        android:textColor="#ffff"
        android:textColorLink="@android:color/white"

        android:textSize="75sp" />

    <EditText
        android:id="@+id/edit_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="108dp"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_query"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:text="SEARCH :"
        android:textColor="#ffff"
        android:textSize="24sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:foregroundTint="@android:drawable/editbox_background"
        android:gravity="center"
        android:onClick="Search"
        android:text="SEARCH"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/text_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_query"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="/*ENTER THE BOOK NAME HERE"
        android:textColor="#ffff"
        android:textSize="14sp" />
</RelativeLayout>
